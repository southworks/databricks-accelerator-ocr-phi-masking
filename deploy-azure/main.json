{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.32.4.45862",
      "templateHash": "6383939983371603890"
    }
  },
  "parameters": {
    "databricksResourceName": {
      "type": "string",
      "defaultValue": "pandora-dbw"
    }
  },
  "variables": {
    "deploymentId": "[guid(deployment().name)]",
    "deploymentIdShort": "[substring(variables('deploymentId'), 0, 8)]",
    "acceleratorRepoName": "anti-money-laundering"
  },
  "resources": [
    {
      "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
      "apiVersion": "2023-07-31-preview",
      "name": "[format('dbw-id-{0}', variables('deploymentIdShort'))]",
      "location": "[resourceGroup().location]"
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('dbw-id-{0}', variables('deploymentIdShort'))), resourceId('Microsoft.Authorization/roleDefinitions', 'Contributor'))]",
      "properties": {
        "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', 'Contributor')]",
        "principalId": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('dbw-id-{0}', variables('deploymentIdShort')))]",
        "principalType": "ServicePrincipal"
      },
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('dbw-id-{0}', variables('deploymentIdShort')))]"
      ]
    },
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2023-08-01",
      "name": "setup-databricks-script",
      "location": "[resourceGroup().location]",
      "kind": "AzureCLI",
      "properties": {
        "azCliVersion": "2.9.1",
        "scriptContent": "      cd ~\n      tdnf install -yq unzip\n      curl -fsSL https://raw.githubusercontent.com/databricks/setup-cli/main/install.sh | sh\n      databricks repos create https://github.com/southworks/${ACCELERATOR_REPO_NAME} gitHub\n      databricks workspace export /Users/${ARM_CLIENT_ID}/${ACCELERATOR_REPO_NAME}/deploy-azure/job-template.json > job-template.json\n      sed \"s/<username>/${ARM_CLIENT_ID}/g\" job-template.json > job.json\n      databricks jobs submit --json @./job.json\n    ",
        "environmentVariables": [
          {
            "name": "DATABRICKS_AZURE_RESOURCE_ID",
            "value": "[resourceId('Microsoft.Databricks/workspaces', parameters('databricksResourceName'))]"
          },
          {
            "name": "ARM_CLIENT_ID",
            "secureValue": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('dbw-id-{0}', variables('deploymentIdShort'))), '2023-07-31-preview').clientId]"
          },
          {
            "name": "ARM_USE_MSI",
            "value": "true"
          },
          {
            "name": "ACCELERATOR_REPO_NAME",
            "value": "[variables('acceleratorRepoName')]"
          }
        ],
        "timeout": "PT20M",
        "cleanupPreference": "OnSuccess",
        "retentionInterval": "PT1H"
      },
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[format('{0}', resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('dbw-id-{0}', variables('deploymentIdShort'))))]": {}
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', format('dbw-id-{0}', variables('deploymentIdShort')))]"
      ]
    }
  ]
}